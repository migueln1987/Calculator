<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494" />
    <Button
        android:id="@+id/left_paren"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/second"
        app:layout_constraintEnd_toStartOf="@id/right_paren"
        android:text="@string/left_paren"/>
    <Button
        android:id="@+id/right_paren"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toEndOf="@id/left_paren"
        android:text="@string/right_paren"/>
    <Button
        android:id="@+id/mc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toEndOf="@id/right_paren"
        android:text="@string/mc"/>
    <Button
        android:id="@+id/m_plus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toEndOf="@id/mc"
        android:text="@string/m_plus"/>
    <Button
        android:id="@+id/m_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toEndOf="@id/m_plus"
        android:text="@string/m_minus"/>
    <Button
        android:id="@+id/mr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toEndOf="@id/m_minus"
        android:text="@string/mr"/>
    <Button
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toEndOf="@id/mr"
        android:text="@string/delete"/>
    <Button
        android:id="@+id/plus_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toEndOf="@id/delete"
        android:text="@string/plus_minus"/>
    <Button
        android:id="@+id/percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/display"
        app:layout_constraintStart_toEndOf="@id/plus_minus"
        android:text="@string/percent"/>
    <Button
        android:id="@+id/divide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toEndOf="@id/percent"
        android:text="@string/divide"/>
    <Button
        android:id="@+id/second"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/left_paren"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/second"/>
    <Button
        android:id="@+id/squared"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/right_paren"
        app:layout_constraintStart_toEndOf="@id/second"
        android:text="@string/squared"/>
    <Button
        android:id="@+id/cube"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mc"
        app:layout_constraintStart_toEndOf="@id/squared"
        android:text="@string/cubed"/>
    <Button
        android:id="@+id/xToTheY"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/m_plus"
        app:layout_constraintStart_toEndOf="@id/cube"
        android:text="@string/x_to_y"/>
    <Button
        android:id="@+id/eToTheX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/m_minus"
        app:layout_constraintStart_toEndOf="@id/xToTheY"
        android:text="@string/e_to_x"
        />
    <Button
        android:id="@+id/tenToTheX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mr"
        app:layout_constraintStart_toEndOf="@id/eToTheX"
        android:text="@string/ten_to_x"/>
    <Button
        android:id="@+id/seven"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delete"
        app:layout_constraintStart_toEndOf="@id/tenToTheX"
        android:text="@string/seven"/>
    <Button
        android:id="@+id/eight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/plus_minus"
        app:layout_constraintStart_toEndOf="@string/seven"
        android:text="@string/eight"/>
    <Button
        android:id="@+id/nine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/percent"
        app:layout_constraintStart_toEndOf="@string/eight"
        android:text="@string/nine"/>
    <Button
        android:id="@+id/multiply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divide"
        app:layout_constraintStart_toEndOf="@string/nine"
        android:text="@string/multiply"/>
    <Button
        android:id="@+id/inverse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/second"
        app:layout_constraintEnd_toStartOf="parent"
        android:text="@string/inverse"/>
    <Button
        android:id="@+id/square_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/squared"
        app:layout_constraintStart_toEndOf="@id/inverse"
        android:text="@string/square_root"/>
    <Button
        android:id="@+id/cube_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cube"
        app:layout_constraintStart_toEndOf="@id/square_root"
        android:text="@string/square_root_symbol"/>
    <Button
        android:id="@+id/random_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/xToTheY"
        app:layout_constraintStart_toEndOf="@id/cube_root"/>
    <Button
        android:id="@+id/natural_log"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/eToTheX"
        app:layout_constraintStart_toEndOf="@id/random_root"
        android:text="@string/natural_log"/>
    <Button
        android:id="@+id/log_ten"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tenToTheX"
        app:layout_constraintStart_toEndOf="@id/natural_log"
        android:text="@string/log_ten"/>
    <Button
        android:id="@+id/four"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seven"
        app:layout_constraintStart_toEndOf="@id/log_ten"
        android:text="@string/four"/>
    <Button
        android:id="@+id/five"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/eight"
        app:layout_constraintStart_toEndOf="@+id/four"
        android:text="@string/five"/>
    <Button
        android:id="@+id/six"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nine"
        app:layout_constraintStart_toEndOf="@id/five"
        android:text="@string/six"/>
    <Button
        android:id="@+id/minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/multiply"
        app:layout_constraintStart_toEndOf="@id/six"
        android:text="@string/minus"/>
    <Button
        android:id="@+id/factorial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inverse"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/factorial"/>
    <Button
        android:id="@+id/sin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/square_root"
        app:layout_constraintStart_toEndOf="@id/factorial"
        android:text="@string/sin"/>
    <Button
        android:id="@+id/cos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cube_root"
        app:layout_constraintStart_toEndOf="@id/sin"
        android:text="@string/cos"/>
    <Button
        android:id="@+id/tan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/random_root"
        app:layout_constraintStart_toEndOf="@id/cos"
        android:text="@string/tan"/>
    <Button
        android:id="@+id/eulers_constant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/natural_log"
        app:layout_constraintStart_toEndOf="@id/tan"
        android:text="@string/eulers_constant"/>
    <Button
        android:id="@+id/scientific_notation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/log_ten"
        app:layout_constraintStart_toEndOf="@id/eulers_constant"
        android:text="@string/scientific_notation"/>
    <Button
        android:id="@+id/one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintStart_toEndOf="@id/scientific_notation"
        android:text="@string/one"
        />
    <Button
        android:id="@+id/two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/five"
        app:layout_constraintStart_toEndOf="@id/one"
        android:text="@string/two"/>
    <Button
        android:id="@+id/three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/six"
        app:layout_constraintStart_toEndOf="@id/two"
        android:text="@string/three"/>
    <Button
        android:id="@+id/plus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/minus"
        app:layout_constraintStart_toEndOf="@id/three"
        android:text="@string/plus"/>
    <Button
        android:id="@+id/rad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/factorial"
        app:layout_constraintStart_toEndOf="parent"
        android:text="@string/rad"/>
    <Button
        android:id="@+id/sinh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sin"
        app:layout_constraintStart_toEndOf="@id/rad"
        android:text="@string/sinh"/>
    <Button
        android:id="@+id/cosh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cos"
        app:layout_constraintStart_toEndOf="@id/sinh"
        android:text="@string/cosh"/>
    <Button
        android:id="@+id/tanh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tan"
        app:layout_constraintStart_toEndOf="@id/cosh"
        android:text="@string/tanh"/>
    <Button
        android:id="@+id/pi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/eulers_constant"
        app:layout_constraintStart_toEndOf="@id/tanh"
        android:text="@string/pi"/>
    <Button
        android:id="@+id/rand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scientific_notation"
        app:layout_constraintStart_toEndOf="@id/pi"
        android:text="@string/rand"/>
    <Button
        android:id="@+id/zero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintStart_toEndOf="@id/rand"
        android:text="@string/zero"/>
    <Button
        android:id="@+id/period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/three"
        app:layout_constraintStart_toEndOf="@id/zero"
        android:text="@string/period"/>
    <Button
        android:id="@+id/equals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/plus"
        app:layout_constraintStart_toEndOf="@id/period"
        android:text="@string/equals"/>

</android.support.constraint.ConstraintLayout>